<div id="<%= dom_id card %>" class="card">
  <div class="card-title">
      <span><%= card.name %></span>
      <span class="card-group"><%= Group.find(card.group_id).description %></span>
  </div>
  <div class="card-description">
      <span><%= card.description %></span>
  </div>
  <div class="card-bottom">
      <div class="card-bottom-timer">
          <button class="card-status-btn">
              <img class="card-bottom-timer-img" src="https://w7.pngwing.com/pngs/926/994/png-transparent-computer-icons-clock-symbol-clock-purple-violet-time-thumbnail.png" alt="">
          </button>
      </div>
      <div class="card-status">
          <%= button_to 'Press me', next_status_path(card.id), method: :get %>
          <button class="card-status-btn" onclick="<%= card.previousStatus()%>">
              <img class="card-status-btn-img-reverse" src="https://images.vexels.com/media/users/3/136479/isolated/preview/72ca95e059828aea4edc31c04b0556ce-proxima-seta-1.png" alt="">
          </button>
          <span><%= format_status(card.status) %></span>
          <button class="card-status-btn" onClick="<%= card.nextStatus()%>">
              <img class="card-status-btn-img" src="https://images.vexels.com/media/users/3/136479/isolated/preview/72ca95e059828aea4edc31c04b0556ce-proxima-seta-1.png" alt="">
          </button>
      </div>
  </div>
</div>
