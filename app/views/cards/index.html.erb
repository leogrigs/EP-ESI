<p style="color: green"><%= notice %></p>

<h1>Cards</h1>
<a class="card-plus" href="/cards/new">
  New Card
  <img src="data:image/png;base64,">
</a>
<div class='dashboard'>
  <div class="dashboard-filter">
    <%= button_to 'To Do-Filter', cards_filter_path('todo'), method: :get, class: "dashboard-filter-btn" %>
    <%= button_to 'Doing-Filter', cards_filter_path('doing'), method: :get, class: "dashboard-filter-btn" %>
    <%= button_to 'Done-Filter', cards_filter_path('done'), method: :get, class: "dashboard-filter-btn" %>    
  </div>

  <div class="dashboard-cards">
    <% @cards.each do |card| %>
    <div id="card_<%=card.id%>">
      <%= render card %>
    </div>  
    <% end %>
  </div>
</div>

