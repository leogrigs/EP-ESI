<% if @user.errors.any? %>
            <div id="error_explanation">
                <h2>
                <%= pluralize(@user.errors.count, "erro") %> impedem que o aluno sejam gravados no banco de dados:
                </h2>


                <ul>
                <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
<% end %>

