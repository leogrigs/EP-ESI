

	<div> 
        <%= form_with scope: :usuario, url: usuarios_path, local: true do |form| %>
            <p> 
                <%= form.label :nome %><br>
                <%= form.text_field :nome %>
            </p>
            
            <p> 
                <%= form.label :email %><br>
                <%= form.text_field :email %>
            </p>
            
            <p>
                <div  id = "senha" name = "senha">
                <%= form.label :senha %><br>
                <%= form.password_field :senha %>
                </div>
            </p>
             
            <p>
                <%= form.label :senha_confirmation %><br>
                <%= form.password_field :senha_confirmation %>
            </p>
            
            <p> 
                <%= form.submit 'Sign up' %>
            </p>
            
            <button id = "Sign in" style="color:red;">
                <%= link_to "Sign in", '/login' %>
            </button>
        <% end %>
        </div>	
    
<% if @usuarios.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@usuarios.count, "usuarios")  %>  banco de dados:</h2>
            
                <ul>
                <% @usuarios.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
<% end %>
